<html>
    <head></head>
    <body>
        <h1>Welocome to EJS templating</h1>
        <h2>Hi <%= user.toUpperCase() %>,<%= company %></h2>
        <% allcontacts.forEach(function(contact,i ){ %>
                <li>
                     <%= contact.fullname %>
                     <button onclick="deleteContact(<%= i %>)">Delete</button>
                </li>
            <% }) %>

        <script>
            function deleteContact(i){
                fetch("http://localhost:3500/deletecontact/"+i,{
                    method:'DELETE'
                })
                .then((res)=>{
                    res.json().then((data)=>{
                       // console.log(data.status)
                       if(data.status==="deletesuccess"){
                        window.location.reload()

                       }
                        
                    })
                })
            }

        </script>
    
    </body>
</html>