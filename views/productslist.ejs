<!DOCTYPE html>
<html lang="en">
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    
</head>
<body>
      <div class="row row-cols-1 row-cols-md-2 g-4">
            <% productlist.forEach(function(a,i){ %>
          <div class="card img-thumbnail" style="width: 400px; margin: 20px; height: 600px; box-shadow: 3px 3px 7px lightslategrey; ">
            <img src="<%= a.image %>" width="100px">
            <div class="card-body">
                <h5 class="card-title"><%= a.title %></h5>
            <p class="card-text"><%= a.description %></p>
            <a href="/products/<%= a.id %>">More...</a>&nbsp;&nbsp;
            <a href="/deleteproduct/<%= a.id %>">Delete Product</a>
            </div>
            
          </div>
          <% }) %>
        
      </div>
    
</body>
</html>